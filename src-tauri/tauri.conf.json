{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FMTools",
  "version": "1.1.0",
  "identifier": "fmtools-portable",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "FMTools - Outils Football Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "installerIcon": "icons/icon.ico",
        "displayLanguageSelector": true,
        "languages": [
          "French",
          "English",
          "German",
          "Spanish",
          "Italian",
          "Portuguese"
        ]
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "publisher": "FMTools",
    "category": "Utility",
    "shortDescription": "Outils d'évaluation pour Football Manager",
    "longDescription": "Application portable pour évaluer les joueurs, préparateurs et infrastructures dans Football Manager. Disponible en 24 langues de l'Union Européenne."
  },
  "plugins": {}
}